    {
        "id": "ui_template_canvas",
        "type": "ui_template",
        "z": "tab_husky_v26",
        "group": "group_maps",
        "name": "MAPA 1: Rastreador (Canvas)",
        "order": 1,
        "width": "6",
        "height": "8",
        "format": "<div style=\"display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%;\">\n    <h4 style=\"margin-bottom: 5px;\">Rastreio em Tempo Real</h4>\n    <canvas id=\"mapaCanvasV26\" width=\"300\" height=\"300\" style=\"background-color: #000; border: 2px solid #00FFFF; border-radius: 4px;\"></canvas>\n    <div style=\"color: gray; font-size: 10px; margin-top: 5px;\">Escala: 20x20 metros</div>\n</div>\n\n<script>\n    (function(scope) {\n        setTimeout(function() {\n            const canvas = document.getElementById('mapaCanvasV26');\n            if(!canvas) return;\n            \n            const ctx = canvas.getContext('2d');\n            const mapSize = 300;\n            const realSize = 20; // Arena de -10 a 10 (20 metros)\n            \n            // Função para converter Metros -> Pixels\n            function toPx(val) {\n                // Transforma -10..10 em 0..300\n                return ((val + 10) / realSize) * mapSize;\n            }\n\n            // Desenha grade de fundo (opcional)\n            ctx.strokeStyle = '#222';\n            ctx.lineWidth = 1;\n            ctx.beginPath();\n            for(let i=0; i<=300; i+=30) {\n                ctx.moveTo(i, 0); ctx.lineTo(i, 300);\n                ctx.moveTo(0, i); ctx.lineTo(300, i);\n            }\n            ctx.stroke();\n\n            scope.$watch('msg', function(msg) {\n                if (!msg || !msg.payload) return;\n                \n                // Desenha o Robô (Ponto Ciano)\n                const x = toPx(msg.payload.x);\n                const y = toPx(msg.payload.y);\n                \n                // Inverte Y porque no Canvas o 0 é em cima\n                const yInv = mapSize - y;\n\n                ctx.beginPath();\n                ctx.arc(x, yInv, 2, 0, 2 * Math.PI);\n                ctx.fillStyle = '#00FFFF'; // Ciano Brilhante\n                ctx.fill();\n            });\n        }, 100); // Pequeno delay para garantir que o DOM carregou\n    })(scope);\n</script>",
        "storeOutMessages": true,
        "fwdInMessages": true,
        "resendOnRefresh": true,
        "templateScope": "local",
        "className": "",
        "x": 670,
        "y": 320,
        "wires": [
            []
        ]
    },
